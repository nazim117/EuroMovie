@page
@model PracticeWebApps.Pages.UpdatePasswordModel
@{
}
<h1>@Model.PageTitle</h1>

<link rel="stylesheet" href="/css/LogIn.css" asp-append-version="true" />
<link rel="stylesheet" href="/css/Layout.css" asp-append-version="true" />

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">
        @Model.ErrorMessage
    </div>
}

<form method="post">
    <div class="form-group">
        <label for="CreateAccountDTO.Password">New Password</label>
        <span asp-validation-for="NewPassword" class="text-white"></span>
        <input type="password" class="form-control" asp-for="NewPassword" />

        <label for="ConfirmPassword">Confirm Password</label>
        <span asp-validation-for="ConfirmPassword" class="text-white"></span>
        <input type="password" class="form-control" asp-for="ConfirmPassword" />

        <input type="hidden" class="form-control" asp-for="UserEmail" />

        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>