@page
@model PracticeWebApps.Pages.LogInModel
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="/css/LogIn.css"asp-append-version="true"/>
<h1>@Model.PageTitle</h1>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">
        @Model.ErrorMessage
    </div>
}
<form method="post">
    <div class="form-group">
        <label for="LogIn.UserName">Username</label>
        <span asp-validation-for="LogIn.UserName" class="text-danger"></span>
        <input type="text" class="form-control" asp-for="LogIn.UserName" />
    </div>

    <div class="form-group">
        <label for="Password">Password</label>
        <span asp-validation-for="LogIn.Password" class="text-danger"></span>
        <input type="password" id="Password" class="form-control" asp-for="LogIn.Password" />
    </div>

    <div class ="form-group">
        <div class="create-account">
            <a href="/CreateAccount">Create Account</a>
        </div>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Login</button>
        <div class="create-account">
            <a asp-page="/Index" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</form>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}