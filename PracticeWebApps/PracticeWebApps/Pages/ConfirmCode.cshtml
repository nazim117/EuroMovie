@page
@model PracticeWebApps.Pages.ConfirmCodeModel
@{
}
<h1>@Model.PageTitle</h1>

<link rel="stylesheet" href="/css/LogIn.css" asp-append-version="true" />
<link rel="stylesheet" href="/css/Layout.css" asp-append-version="true" />

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">
        @Model.ErrorMessage
    </div>
}

<form method="post">
    <div class="form-group">
        <label for="EnteredCode">Enter Code</label>
        <span asp-validation-for="EnteredCode" class="text-white"></span>
        <input type="text" class="form-control" asp-for="EnteredCode" />
        <input type="hidden" class="form-control" asp-for="Code" />

        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>